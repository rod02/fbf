<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddDrinkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|enterAlways"

                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="@string/title_add_drink">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical|end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/lay_regular_margin"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/title_add_drink"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_save"
                        android:layout_width="@dimen/icon_size_regular"
                        android:layout_height="@dimen/icon_size_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/lay_regular_margin"
                        android:layout_weight="0"
                        android:paddingTop="0dp"
                        app:srcCompat="@drawable/ic_check" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>



        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/drink_image"
                android:layout_height="@dimen/drink_image"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/lay_regular_margin"
                app:srcCompat="@drawable/drinkbottle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/lay_regular_margin"
                android:gravity="center_horizontal|center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_value"
                    android:layout_width="@dimen/add_drink_edittext_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lay_regular_margin"
                    android:layout_weight="0"
                    android:background="@drawable/edit_text_border_color"
                    android:ems="10"
                    android:hint="0"
                    android:inputType="textPersonName"
                    android:padding="@dimen/lay_regular_padding"
                    android:textSize="@dimen/add_drink_default_text_size" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lay_regular_margin"
                    android:layout_weight="1"
                    android:text="mL"
                    android:textSize="@dimen/add_drink_default_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/lay_regular_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_250"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lay_regular_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:text="+250mL"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/add_drink_default_text_size" />

                <Button
                    android:id="@+id/btn_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lay_regular_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:text="+500mL"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/add_drink_default_text_size" />

                <Button
                    android:id="@+id/btn_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lay_regular_margin"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:text="+1000mL"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/add_drink_default_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_xs"
                    android:layout_height="@dimen/icon_size_xs"
                    android:layout_weight="0"
                    android:tint="@color/gray"
                    app:srcCompat="@drawable/ic_profile_settings" />

                <TextView
                    android:id="@+id/tv_change_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lay_regular_margin"
                    android:layout_weight="0"
                    android:gravity="center_horizontal"
                    android:text="@string/change_unit"
                    android:textSize="@dimen/add_drink_default_text_size" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>