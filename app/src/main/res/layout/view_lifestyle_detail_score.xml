<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/lay_regular_padding"
    >


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_regular_margin"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lay_regular_padding"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="@dimen/lifestyle_detail_score_icon"
                        android:layout_height="@dimen/lifestyle_detail_score_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/lay_regular_margin"
                        android:layout_weight="0"
                        android:background="?attr/lifeStyle_theme_color"
                        android:clickable="false"
                        android:scaleType="fitCenter"
                        android:src="?attr/lifeStyle_icon"
                        app:riv_corner_radius="20dp"
                        app:riv_mutate_background="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="top|bottom"
                                android:text="?attr/lifeStyle_title"
                                android:textColor="?attr/lifeStyle_theme_color"
                                android:textSize="@dimen/nav_text_title_size" />

                            <TextView
                                android:id="@+id/tv_goal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="3dp"
                                android:text="2.5 of 3 hrs"
                                android:textSize="@dimen/lifestyle_text_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/pb"
                                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/lay_regular_margin"
                                android:layout_weight="1"
                                android:progress="70"
                                android:progressTint="?attr/lifeStyle_theme_color"
                                android:secondaryProgress="100" />

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="@dimen/lifestyle_detail_score_badge"
                                android:layout_height="@dimen/lifestyle_detail_score_badge"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0"
                                android:tint="?attr/lifeStyle_theme_color"
                                app:srcCompat="@drawable/ic_badge" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="@dimen/icon_star_x_small"
                                android:layout_height="@dimen/icon_star_x_small"
                                android:layout_marginEnd="@dimen/lay_regular_margin"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/ic_star_checked" />

                            <TextView
                                android:id="@+id/tv_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+1 Challenge"
                                android:textSize="@dimen/lifestyle_text_small" />

                            <TextView
                                android:id="@+id/tv_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_weight="0"
                                android:text="85%"
                                android:textSize="@dimen/lifestyle_text_small" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lay_regular_margin"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_challenge"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/lifestyle_detail_score_btn_height"
                    android:layout_marginEnd="@dimen/lay_regular_margin"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:text="@string/weekly_challenge"
                    android:textAllCaps="false"
                    android:textSize="@dimen/lifestyle_detail_score_btn_text" />

                <Button
                    android:id="@+id/btn_suggestions"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/lifestyle_detail_score_btn_height"
                    android:layout_marginEnd="@dimen/lay_regular_margin"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:text="@string/suggestions"
                    android:textAllCaps="false"
                    android:textSize="@dimen/lifestyle_detail_score_btn_text" />

                <Button
                    android:id="@+id/btn_add_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/lifestyle_detail_score_btn_height"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:text="@string/add_activity"
                    android:textAllCaps="false"
                    android:textSize="@dimen/lifestyle_detail_score_btn_text" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/lay_regular_margin"
                android:layout_weight="0"
                tools:listitem="@layout/item_activity_lifestyle" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/lay_regular_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/lay_regular_margin"
                    android:layout_weight="0"
                    android:tint="?attr/lifeStyle_theme_color"
                    app:srcCompat="@drawable/ic_badge" />

                <TextView
                    android:id="@+id/tv_earn_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/you_earned_n_badge" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>