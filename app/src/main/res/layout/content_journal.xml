<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"

        android:layout_height="wrap_content"


        android:layout_margin="@dimen/lay_regular_margin"
        card_view:cardCornerRadius="@dimen/dialog_journal_radius"
        card_view:cardElevation="@dimen/dialog_journal_elevation">

        android:alpha="0.8"

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/journal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@android:drawable/ic_delete" />

                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:text="@string/journal_header"
                    android:textAlignment="center"
                    android:textSize="@dimen/jor_header_txt_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_header"
                    android:layout_margin="@dimen/text_margin"
                    android:background="@android:color/transparent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/mentally_i_am"
                            android:textSize="@dimen/jor_label_txt_size" />

                        <RadioGroup
                            android:id="@+id/rg_mental"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/rb_size"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="@dimen/rb_size"
                                android:layout_height="@dimen/rb_size"
                                android:background="@drawable/ic_face_happy"
                                android:button="@android:color/transparent"
                                android:gravity="center_vertical|center_horizontal" />

                            <RadioButton
                                android:layout_width="@dimen/rb_size"
                                android:layout_height="@dimen/rb_size"
                                android:background="@drawable/ic_face_neutral"
                                android:button="@android:color/transparent"
                                android:gravity="center_vertical|center_horizontal" />

                            <RadioButton
                                android:layout_width="@dimen/rb_size"
                                android:layout_height="@dimen/rb_size"
                                android:background="@drawable/ic_face_sad"
                                android:button="@android:color/transparent"
                                android:gravity="center_vertical|center_horizontal" />
                        </RadioGroup>

                    </LinearLayout>


                    <com.fightbackfoods.view.SpinnerHealthAspectCategory
                        android:id="@+id/sp_mental"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:healthCategory="mental"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/lay_regular_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/physically_i_am"
                            android:textSize="@dimen/jor_label_txt_size" />

                        <RadioGroup
                            android:id="@+id/rg_physical"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/rb_size"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="@dimen/rb_size"
                                android:layout_height="@dimen/rb_size"
                                android:background="@drawable/ic_face_happy"
                                android:button="@android:color/transparent"
                                android:gravity="center_vertical|center_horizontal" />

                            <RadioButton
                                android:layout_width="@dimen/rb_size"
                                android:layout_height="@dimen/rb_size"
                                android:background="@drawable/ic_face_neutral"
                                android:button="@android:color/transparent"
                                android:gravity="center_vertical|center_horizontal" />

                            <RadioButton
                                android:layout_width="@dimen/rb_size"
                                android:layout_height="@dimen/rb_size"
                                android:background="@drawable/ic_face_sad"
                                android:button="@android:color/transparent"
                                android:gravity="center_vertical|center_horizontal" />
                        </RadioGroup>

                    </LinearLayout>

                    <com.fightbackfoods.view.SpinnerHealthAspectCategory
                        android:id="@+id/sp_physical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:healthCategory="physical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/lay_regular_margin"
                        android:layout_marginTop="@dimen/lay_regular_margin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/today_could_use_some"
                            android:textSize="@dimen/jor_label_txt_size"
                            android:textStyle="italic" />

                        <EditText
                            android:id="@+id/et_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/edit_text_border_color"
                            android:ems="10"
                            android:gravity="left|center_vertical"
                            android:hint="@string/jor_could_use_some_hint_text"
                            android:imeOptions="actionDone"
                            android:inputType="textCapSentences|textMultiLine"
                            android:lines="3"
                            android:maxLines="6"
                            android:paddingLeft="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_add_journal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/lay_regular_margin"
                        android:clickable="true"
                        android:text="@string/add_journal_entry"
                        android:textColor="@color/text_link"
                        android:textSize="@dimen/jor_label_txt_size" />

                    <LinearLayout
                        android:id="@+id/ll_journal_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/lay_regular_margin"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/log_journal_update"
                            android:textSize="@dimen/jor_label_txt_size"
                            android:textStyle="italic" />

                        <EditText
                            android:id="@+id/et_optional_entry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/edit_text_border_color"
                            android:ems="10"
                            android:gravity="left|center_vertical"
                            android:hint="@string/write_whatever"
                            android:imeOptions="actionDone"
                            android:inputType="textCapSentences|textMultiLine"
                            android:lines="3"
                            android:maxLines="6"
                            android:paddingLeft="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/lay_regular_margin"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner"
                            style="@style/Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:entries="@array/post_share_option" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/cb_fb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true" />

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    app:srcCompat="@drawable/fb_logo" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/post_to_fb"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_post"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_box_clickable_post"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0"
                            android:src="@drawable/ic_heart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0"
                            android:imeOptions="actionDone"
                            android:text="@string/action_post"
                            android:textColor="@color/text_shadow_white"
                            android:textSize="@dimen/jor_label_txt_size" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>
</FrameLayout>