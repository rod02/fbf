<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"

        android:layout_height="wrap_content"


        android:layout_margin="@dimen/lay_regular_margin"
        android:alpha="0.8"
        card_view:cardCornerRadius="@dimen/dialog_journal_radius"
        card_view:cardElevation="@dimen/dialog_journal_elevation">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/journal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@android:drawable/ic_delete" />

                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/iv_close"
                    android:text="Some to try"
                    android:textAlignment="center"
                    android:textSize="@dimen/jor_header_txt_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_header"
                    android:layout_margin="@dimen/text_margin"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/lay_regular_margin"
                            android:layout_weight="0"
                            android:text="@string/mentally_i_am"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="@dimen/icon_size_regular"
                            android:layout_height="@dimen/icon_size_regular"
                            android:layout_weight="0"
                            card_view:srcCompat="@drawable/ic_face_happy" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Better than yesterday"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        card_view:srcCompat="@drawable/raw_img_journal_1" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:text="@string/lorem_sh"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/lay_regular_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/lay_regular_margin"
                            android:layout_weight="0"
                            android:text="@string/mentally_i_am"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="@dimen/icon_size_regular"
                            android:layout_height="@dimen/icon_size_regular"
                            android:layout_weight="0"
                            card_view:srcCompat="@drawable/ic_face_happy" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/lay_regular_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Better than yesterday"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/lay_regular_margin"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:text="@string/lorem_sh"
                        android:textSize="10sp" />


                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>
</FrameLayout>