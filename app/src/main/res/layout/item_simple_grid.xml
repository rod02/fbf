<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardMaxElevation="@dimen/default_elevation"
    card_view:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_article_image_height"
            android:contentDescription="@string/article_sample_value"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/no_image" />

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_alignEnd="@+id/iv_image"
            android:layout_alignStart="@+id/iv_image"
            android:layout_alignTop="@+id/iv_image"
            android:layout_centerInParent="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_image"
            android:layout_below="@+id/iv_image"
            android:layout_margin="@dimen/lay_regular_margin"
            android:fontFamily="@font/caudex"
            android:gravity="center_horizontal"
            android:lines="2"
            android:text="@string/nav_header_title"
            android:textSize="@dimen/list_sub_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>